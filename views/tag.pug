extends layout

block content
  .inner
    h2 Tags #{currentTag ? `- ${currentTag}` : ''}
    ul.tags
      each tag in tags
        li.tag
          a.tag__link(
            href=`/tags/${tag._id}`
            class=(currentTag === tag._id ? 'tag__link--active' : '')
          )
            span.tag__text= tag._id
            span.tag__count= tag.count