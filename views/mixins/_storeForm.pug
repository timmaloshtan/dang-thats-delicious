mixin storeForm(store = {})
  //- form.card(action="/add" method="POST" enctype="multipart/form-data")
  form.card(
    action=`/add/${store._id || ''}`
    method="POST"
  )
    label(for="name") Name
    input(type="text" name="name" value=store.name)
    label(for="description") Description
    textarea(name="description")= store.description
    label(for="address") Address
    input(
      type="text"
      id="address"
      name="location[address]"
      value=(store.location && store.location.address)
    )
    label(for="lng") Longitude
    input(
      type="text"
      id="lng"
      name="location[coordinates][0]"
      value=(store.location && store.location.coordinates[0])
      required
    )
    label(for="lat") Latitude
    input(
      type="text"
      id="lat"
      name="location[coordinates][1]"
      value=(store.location && store.location.coordinates[1])
      required
    )
    - const choices = ['Wifi', 'Open Late', 'Family Friendly', 'Vegetarian', 'Licensed']
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(
            type="checkbox"
            value=choice
            id=choice
            name="tags"
            checked=(tags.includes(choice))
          )
          label(for=choice) #{choice}
    input.button(type="submit" value="Save â†’")